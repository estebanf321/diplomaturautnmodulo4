<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4> Modificar una Oferta</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">

                <input type="hidden" value="{{oferta.id_oferta}}" name="id_oferta">
                <label for="">Id producto</label>
                <div class="form-group">
                    <input type="number" class="form-control" value="{{oferta.id_producto}}" name="id_producto"
                        required>
                </div>
                <label for="">Precio oferta</label>
                <div class="form-group">
                    <input type="number" class="form-control" value="{{oferta.precio_oferta}}" name="precio_oferta"
                        required>
                </div>
                <label for="">Cantidad m√≠nima</label>
                <div class="form-group">
                    <input type="number" class="form-control" value="{{oferta.cant_min}}" name="cant_min" required>
                </div>
                <div class="form-group"> 
                    <p><label>Imagen:<input type="file" name="imagen" id="imagen"/>
                    </label></p>
                   <p>
                       <label>
                           <input type="checkbox" name="img_delete" id="img_delete" value="1"/>
                           Eliminar la imagen actual?
                       </label>
                       <input type="hidden" name="img_original" value="{{oferta.img_id}}"/>
                   </p>
                </div>

                <label for="">Observaciones</label>
                {{!-- <div class="form-group">
                    <textarea type="text" class="form-control" name="observaciones" required> {{oferta.observaciones}}
                        </textarea>
                </div> --}}
                <div class="form-group">
                    <input type="text" class="form-control" value="{{oferta.observaciones}}" name="observaciones" required/>
                </div>

                <label for="">Vigencia</label>
                <div class="form-group">
                    <input type="text" class="form-control" value="{{oferta.vigencia}}" name="vigencia" required/>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>

            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>